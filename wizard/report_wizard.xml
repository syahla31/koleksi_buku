<odoo>
    <data>
        <record id="report_view_form" model="ir.ui.view">
            <field name="name">Transaksi Report</field>
            <field name="model">wizard.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <!-- <field name="show_all_date" /> -->
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                    <footer>
                        <button name="print_report_pdf" string="print" type="object" default_focus="1" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_report_wizard" model="ir.actions.act_window">
            <field name="name">Transaksi Report</field>
            <field name="res_model">wizard.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="action_report_rental_transactions" model="ir.actions.report">
            <field name="name">Rental Transactions Report</field>
            <field name="model">wizard.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">koleksi_buku.report_rental_transactions</field>
            <field name="report_file">koleksi_buku.report_rental_transactions</field>
            <field name="binding_model_id" ref="model_wizard_report"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
